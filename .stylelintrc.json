				"text-shadow",
				"white-space",
				"word-spacing",
				"word-wrap",
				"word-break",
				"overflow-wrap",
				"tab-size",
				"hyphens",
				"interpolation-mode",
				"opacity",
				"visibility",
				"filter",
				"resize",
				"cursor",
				"pointer-events",
				"user-select",
				"unicode-bidi",
				"direction",
				"columns",
				"column-span",
				"column-width",
